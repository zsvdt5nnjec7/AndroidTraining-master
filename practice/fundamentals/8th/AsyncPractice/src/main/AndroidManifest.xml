<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.mixi.practice.async">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ServicesActivity"
            android:label="@string/services_name" />
        <activity
            android:name=".AsyncTaskLoaderActivity"
            android:label="@string/async_task_loader_name" />
        <activity
            android:name=".AsyncTaskActivity"
            android:label="@string/async_task_name" />

        <service android:name=".BoundService" />
        <service android:name=".MyIntentService" />
        <service android:name=".StartedService" />
    </application>
</manifest>