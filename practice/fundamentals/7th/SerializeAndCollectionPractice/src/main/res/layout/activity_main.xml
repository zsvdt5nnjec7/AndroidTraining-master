<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="jp.mixi.practice.serializeandcollection.MainActivity">

    <Button
        android:id="@+id/serializable_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/serializable_name" />

    <Button
        android:id="@+id/shared_preferences_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/shared_preferences_name" />

    <Button
        android:id="@+id/storage_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/storage_name" />
</LinearLayout>
