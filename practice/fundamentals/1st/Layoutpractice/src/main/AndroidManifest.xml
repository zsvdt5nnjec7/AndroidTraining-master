<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.mixi.practice.layout">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LinearLayout1Activity"
            android:label="@string/linear_layout1_name" />
        <activity
            android:name=".LinearLayout2Activity"
            android:label="@string/linear_layout2_name" />
        <activity
            android:name=".RelativeLayout1Activity"
            android:label="@string/relative_layout1_name" />
        <activity
            android:name=".RelativeLayout2Activity"
            android:label="@string/relative_layout2_name" />
        <activity
            android:name=".FrameLayout1Activity"
            android:label="@string/frame_layout1_name" />
        <activity
            android:name=".FrameLayout2Activity"
            android:label="@string/frame_layout2_name" />
        <activity
            android:name=".ScrollViewActivity"
            android:label="@string/scroll_view1_name" />
    </application>
</manifest>