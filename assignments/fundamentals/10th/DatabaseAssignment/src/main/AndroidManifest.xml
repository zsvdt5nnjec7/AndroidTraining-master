<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="jp.mixi.assignment.database">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SQLiteActivity"
            android:label="@string/sqlite_name" />
        <activity
            android:name=".SQLiteListActivity"
            android:label="@string/sqlite_list_name" />
        <activity
            android:name=".CursorLoaderActivity"
            android:label="@string/cursor_loader_name" />
    </application>

</manifest>