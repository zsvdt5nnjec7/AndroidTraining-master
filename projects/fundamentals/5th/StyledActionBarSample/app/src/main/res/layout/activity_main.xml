<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <Button
        android:id="@+id/CallStandard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/call_standard"/>
    <Button
        android:id="@+id/CallTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/call_tab"/>
    <Button
        android:id="@+id/CallList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/call_list"/>
    <Button
        android:id="@+id/CallStandardSplit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/call_standard_split"/>
    <Button
        android:id="@+id/CallTabsSplit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/call_tab_split"/>
    <Button
        android:id="@+id/CallListSplit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/call_list_split"/>
</LinearLayout>