<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    <Button
        android:id="@+id/NewActivityButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/trigger_new_activity"/>
    <Button
        android:id="@+id/NewActivityForResultButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/trigger_new_activity_for_result"/>
    <Button
        android:id="@+id/NewActivityWithActionButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/trigger_new_activity_with_action"/>
    <Button
        android:id="@+id/NewActivityWithExtraButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/trigger_new_activity_with_extra"/>
</LinearLayout>